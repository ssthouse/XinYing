<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_iv_avatar_cony"
            android:layout_width="@dimen/choose_gender_avatar_width"
            android:layout_height="@dimen/choose_gender_avatar_width"
            android:src="@drawable/logo"/>

        <Space
            android:layout_width="48dp"
            android:layout_height="match_parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/id_iv_avatar_brown"
            android:layout_width="@dimen/choose_gender_avatar_width"
            android:layout_height="@dimen/choose_gender_avatar_width"
            android:src="@drawable/logo"/>

    </LinearLayout>

    <TextView
        android:id="@+id/id_tv_who_i_love"
        android:textSize="18sp"
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:text="@string/str_i_love_brown"/>

    <Button
        android:id="@+id/id_btn_sure"
        android:layout_marginTop="80dp"
        android:layout_gravity="center"
        android:layout_width="120dp"
        android:layout_height="42dp"
        android:text="Sure"/>
</LinearLayout>